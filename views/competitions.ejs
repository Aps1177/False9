<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head')-%>
    <title>Document</title>
</head>
<body>
  <%- include('partials/navbar')-%>

 
  <div class="container-fluid heading">
    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" src="img/plCover.png" alt="First slide">
        <div class="carousel-caption d-none d-md-block">
          <h5>UEFA Champions League</h5>
          <p>...</p>
        </div>
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="img/uclCover.png" alt="Second slide">
        <div class="carousel-caption d-none d-md-block">
          <h5>LaLiga</h5>
          <p>2019-2020</p>
        </div>
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="img/serieACover.png" alt="Third slide">
        <div class="carousel-caption d-none d-md-block">
          <h5>Premier League</h5>
          <p>2020=2021</p>
        </div>
      </div>
    </div>
  </div>
    <div class="clipped">
      <h2 class="section-heading">Leagues and Competitions</h2>

    </div>
    
  </div>


  <div class="container-fluid">
  <div class="row">
   <% for(let i=0; i<noOfComp; i++){ %>
   <%    if(displayData.competitions[i].plan === "TIER_ONE"){ %>
          <div class="col-sm-4">
        <div class="card w-50">
          <div class="card-body">
            <h5 class="card-title"><%= displayData.competitions[i].name %></h5>
            <p class="card-text"><%= displayData.competitions[i].area.name %></p>
            <a href="competitions/<%= displayData.competitions[i].code %>" role="button" class="btn btn-primary" id=" <%= displayData.competitions[i].code %> " >View Teams  </a>
          </div>
        </div>
      </div>       
        <% } %>
  <% } %>
</div>
</div>
<script type="text/javascript">
$('.carousel').carousel()
</script>
</body>
</html>